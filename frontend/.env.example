# Frontend environment variables for Classical Dance Teacher portfolio
# These should be set by the deployment/orchestrator; do not commit secrets.

# Application runtime port for dev/preview server (Vite).
# Prefer REACT_APP_PORT based on container_env, fallback to VITE_PORT.
REACT_APP_PORT=3000

# Backend API endpoints
REACT_APP_API_BASE=http://localhost:3010
REACT_APP_BACKEND_URL=http://localhost:3010
REACT_APP_WS_URL=ws://localhost:3010/ws
REACT_APP_FRONTEND_URL=http://localhost:3000

# Node environment
REACT_APP_NODE_ENV=development

# Telemetry toggle (example)
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Source maps toggle
REACT_APP_ENABLE_SOURCE_MAPS=true

# Proxy/Trust settings (if applicable)
REACT_APP_TRUST_PROXY=true

# Log level for client
REACT_APP_LOG_LEVEL=info

# Healthcheck path (if your hosting uses it)
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags (JSON string)
REACT_APP_FEATURE_FLAGS={}

# Experiments toggle
REACT_APP_EXPERIMENTS_ENABLED=false

# Admin API token (example; do not commit real tokens)
REACT_APP_ADMIN_API_TOKEN=

# Maintenance mode (prefer VITE_ with Vite; also supports REACT_APP_)
# Set to true/false (or 1/0, yes/no, on/off)
VITE_MAINTENANCE_MODE=false
REACT_APP_MAINTENANCE_MODE=false
